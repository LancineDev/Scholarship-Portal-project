# Backend Server Environment Variables

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
DB_NAME=scholarship-portal

# Server Configuration
PORT=5000
NODE_ENV=development

# Admin Email (for system notifications)
ADMIN_EMAIL=portal@gmail.com

# Client URL (for CORS)
CLIENT_URL=http://localhost:3000
CLIENT_PRODUCTION_URL=https://your-frontend-domain.com

# Email Service (Optional - for sending emails)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# JWT Secret (if using authentication)
JWT_SECRET=your-super-secret-key-change-this

# Notification Settings
NOTIFICATION_DAYS_BEFORE_DEADLINE=7
NOTIFICATION_CHECK_INTERVAL=3600000  # 1 hour in milliseconds
